<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- GOOGLE BUTTON -->
    <style name="button_google" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red_google</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- FACEBOOK BUTTON -->
    <style name="button_facebook" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/blue_facebook</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- SPLASH -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- EDIT DEFAULT -->
    <style name="edit_default">

    </style>

    <!-- TEXT INPUT DEFAULT -->
    <style name="input_default">

    </style>
</resources>