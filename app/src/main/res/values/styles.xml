<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- GOOGLE BUTTON -->
    <style name="button_google" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red_google</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- FACEBOOK BUTTON -->
    <style name="button_facebook" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/blue_facebook</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- SPLASH -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- EDIT DEFAULT -->
    <style name="edit_default" parent="Theme.MaterialComponents.Light">
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TEXT INPUT DEFAULT -->
    <style name="text_input_default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="toolbar_default">
        <item name="titleTextColor">@color/green</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_24</item>
    </style>

    <!-- TEXT TITLE PROFILE INFO -->
    <style name="text_title_profile">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>